<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="5" author="mikhail">
        <createTable tableName="producer">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_producerId" nullable="false"/>
            </column>
            <column name="detailsId" type="int">
                <constraints referencedTableName="details" referencedColumnNames="id" foreignKeyName="fk_producer_detailsId" nullable="false"/>
            </column>
            <column name="priceId" type="int">
                <constraints referencedTableName="price" referencedColumnNames="id" foreignKeyName="fk_producer_priceId" nullable="false"/>
            </column>
            <column name="socialNetworks" type="varchar(50)"/>
            <column name="avRate" type="real">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>