<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="9" author="mikhail">
        <dropColumn tableName="notation">
            <column name="time"/>
            <column name="producer_id"/>
            <column name="customer_id"/>
        </dropColumn>
        <addColumn tableName="notation">
            <column name="service_type_id" type="bigint">
                <constraints referencedTableName="service_type" referencedColumnNames="id" foreignKeyName="fk_notation_service_type_id" nullable="false"/>
            </column>
            <column name="time" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="producer_id" type="bigint">
                <constraints referencedTableName="producer" referencedColumnNames="id" foreignKeyName="fk_notation_producer_id" nullable="false"/>
            </column>
            <column name="customer_id" type="bigint">
                <constraints referencedTableName="customer" referencedColumnNames="id" foreignKeyName="fk_notation_customer_id" nullable="false"/>
            </column>
            <column name="feedback_id" type="bigint">
                <constraints referencedTableName="feedback" referencedColumnNames="id" foreignKeyName="fk_notation_feedback_id" nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>